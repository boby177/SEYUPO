<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_w"
    android:orientation="vertical"
    android:id="@+id/relativeLayout1"
    >


     <TextView
        android:id="@+id/textViewInit1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/signin_subtitle"
        android:textColor="#000000"
        android:textSize="14sp"
        android:fontFamily="MagdaCleanMono"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/textViewInit2"

          />

    <TextView
        android:id="@+id/textViewInit2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextEmailAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:fontFamily="Avenir Next LT Pro"
        android:text="@string/signin_title"
        android:textColor="#000000"
        android:textSize="23sp"

        android:textStyle="bold"

        />


    




    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:inputType="textEmailAddress"
        android:ems="10"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/editTextPassword"
        android:layout_alignParentRight="true"

        android:hint="@string/field_email_signin"
        android:textColorHint="#9D9C96"
        android:textColor="#000"
        />





    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/buttonSignin"
        android:layout_alignRight="@+id/editTextEmailAddress"
        android:hint="@string/field_password_signin"
        android:textColorHint="#9D9C96"
        android:textColor="#000"
        />

    <Button
        android:id="@+id/buttonSignin"
        android:layout_width="202dp"
        android:layout_height="38dp"
        android:layout_above="@+id/linkSignin"

        android:layout_marginLeft="95dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="23dp"
        android:background="?attr/colorAccent"
        android:fontFamily="Avenir Next LT Pro"

        android:text="@string/button_signin"

        android:textColor="#2d2624"
        android:textSize="16sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/linkSignin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:layout_marginBottom="204dp"
        android:gravity="left"
        android:text="@string/link_signin"
        android:textColor="#3C77B9"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewQR"
        android:layout_width="132dp"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/qr_scan_code" />


</RelativeLayout>